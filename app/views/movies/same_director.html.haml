-#  This file is app/views/movies/similar.html.haml
%h1= "Movies Similar to #{@same_director.title} by #{@match_field}"

%table#movies
  %thead
    %tr
      %th Title
      %th Director
      %th Rating
      %th Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.director
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path